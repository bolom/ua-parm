<%= form_with(model: plant, class: "#{dom_id(plant)}_form") do |form| %>
  <% if plant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group mb-6">
    <em><%= plant.name %></em>
  </div>
  <div class="form-group mb-6">
    <em><%= plant.family.name  %></em>
  </div>
  <div class="bg-white shadow-md rounded mb-6 px-8 pt-6 pb-8 mb-4">
    <label class="block mb-2">Pharmacopee</label>
    <%= form.select :pharmacopoeia, Plant.pharmacopoeia.keys,
                      {},
                      {class: "form-control shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 "}%>
  </div>
<!-- names -->
<div class="mb-6  bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <div class="2">
    <h2>Nom commun</h2>
      <%= form.select :name_ids, Name.all.collect {|a| [a.label, a.id]} ,{ }, {multiple: true, data: { controller: 'select'}} %>
  </div>
  <div class="mt-6">
    <h2>Cr√©er un nouveau nom commun</h2>
    <%= form.fields_for :names, plant.names.build do |plant_fields| %>
      <%= plant_fields.text_field :label, placeholder: "label" %>
    <% end %>
  </div>
</div>
  <div class="p-4 pl-8 border-b border-slate-100 dark:border-slate-300">
    <div class="inline-flex space-x-1">
    <%= form.submit name_button, class: "px-6
      py-2.5
      bg-blue-600
      text-white
      font-medium
      text-xs
      leading-tight
      capitalize
      rounded
      shadow-md

      ease-in-out" %>
        <%= link_to "discard changes", plants_path, class: "px-6
          py-2.5
          text-blue-600
          font-medium
          text-xs
          leading-tight
          capitalize
          rounded
          shadow-md" %>

<% end %>
