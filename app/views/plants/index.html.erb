<% if notice.present? %>
<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
  <%= notice %>
</p>
<% end %>
<h1 class="font-bold text-2xl">Plants Manager</h1>
<!-- add new plant -->
<div class="mt-4">
  <%= render "form", plant: @plant %>
</div>
<!-- all plants -->
<div id="plants" class="mt-5">
    <table class="table-auto">
      <thead>
      <tr>
        <th>Scientific</th>
        <th>Pharmacopoeia</th>
        <th>Family</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <%= render @plants %>
      <tbody>
    </table>
  </div>
