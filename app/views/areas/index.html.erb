<% if notice.present? %>
<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
  <%= notice %>
</p>
<% end %>
<h1 class="font-bold text-2xl">Areas Manager</h1>
<!-- add new area -->
<div class="mt-4">
  <%= render "form", area: @area %>
</div>
<!-- all areas -->
<div id="areas" class="mt-5">
    <table class="table-auto">
      <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
        <%= render @areas %>
      <tbody>
    </table>
  </div>
