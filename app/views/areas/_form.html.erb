<%= form_with(model: area, class: "") do |form| %>

<% if area.errors.any? %>
   <div class="error-message">
     <%= area.errors.full_messages.to_sentence.capitalize %>
   </div>
 <% end %>
  <div class="mb-5">
    <%= form.text_field :name, required: true, placeholder: "name", class: "inline-block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-96" %>
  </div>
  <div class="flex items-center justify-between">
    <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
