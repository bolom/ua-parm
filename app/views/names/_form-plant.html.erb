<%= form_with(model: [plant, name], class: "#{dom_id(name)}_form border-b border-gray-200 ") do |form| %>
    <% if name.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">

      <h2>
        <%= pluralize(name.errors.count, "error") %> prohibited this name from being
        saved:
      </h2>

      <ul>
        <% name.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="mb-5 inline-flex space-x-2 ">
  <%= form.text_field :label, placeholder: "add name", class: "shadow rounded-md border border-gray-200 outline-none px-2 py-2 mt-2 " %>
  <%= form.hidden_field :category, value: category %>
  <%= form.hidden_field :plant_id, value: plant.id %>
  <%= form.submit "New #{category.capitalize}", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold px-3 py-2 mt-2  rounded focus:outline-none focus:shadow-outline" %>
</div>
<% end %>
