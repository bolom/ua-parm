<tr>
  <td><%= person.first_name %></td>
  <td><%= person.last_name %></td>
  <td><%= person.category %></td>

  <td>
      <%= link_to "Edit", edit_person_path(person),class: "btn bg-gray-100"%>
      <%= button_to "Delete", person_path(person),
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure?" } },
                      class: "btn bg-red-100" %>
  </td>
</tr>


<!-- Mise en forme de l'affichage de chaque nom et prÃ©nom -->
<turbo-frame id="<%= "person_#{person.id}" %>" class="table-row border-b">
  <div class="table-cell border-b border-slate-100 dark:border-slate-300 p-4 pl-8">
    <div class="text-lg">
      <%= link_to person_path(person), data: { turbo_frame: "_top" } do %>
        <%= person_name(person) %>
      <% end %>
    </div>
  </div>

  <div class="table-cell border-b border-slate-100 dark:border-slate-300 p-4 pl-8">
    <%= person.first_name %>
  </div>
  <div class="table-cell border-b border-slate-100 dark:border-slate-300 p-4 pl-8">
    <em><%= person.last_name %></em>
  </div>
  <div class="table-cell p-4 pl-8 border-b border-slate-100 dark:border-slate-300">
    <div class="inline-flex space-x-1">
      <%= link_to person_path(person),
      data: { turbo_frame: "_top" } ,
      class: "flex-1 show"  do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="inline h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
      <% end %>
      <%= link_to edit_person_path(person), class: "flex-1 edit"  do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="inline transition duration-500 hover:scale-125  h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
      </svg>
      <% end %>
    </div>
  </div>
</turbo-frame>
